<SearchPlugin xmlns="http://www.mozilla.org/2006/browser/search/">
  <ShortName>Baidu</ShortName>
  <Description>Baidu Search</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <UpdateInterval>7</UpdateInterval>
  <IconUpdateUrl>https://www.baidu.com/favicon.ico</IconUpdateUrl>
  <Image height="16" type="image/x-icon" width="16">https://www.baidu.com/favicon.ico</Image>
  <Url method="GET" resultDomain="baidu.com" template="http://www.baidu.com/s?wd={searchTerms}" type="text/html"/>
  <SearchForm>http://www.baidu.com/</SearchForm>
</SearchPlugin>
