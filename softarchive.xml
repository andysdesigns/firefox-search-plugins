<SearchPlugin xmlns="http://www.mozilla.org/2006/browser/search/">
  <ShortName>SoftArchive</ShortName>
  <Description>Softarchive Search</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <UpdateInterval>7</UpdateInterval>
  <IconUpdateUrl>https://softarchive.net/favicon.ico</IconUpdateUrl>
  <Image height="16" type="image/x-icon" width="16">https://softarchive.net/favicon.ico</Image>
  <Url method="GET" template="http://my.softarchive.net/search/" type="text/html">
    <Param name="q" value="{searchTerms}"/>
  </Url>
  <SearchForm>http://my.softarchive.net/search/</SearchForm>
</SearchPlugin>
