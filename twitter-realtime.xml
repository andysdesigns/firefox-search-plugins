<SearchPlugin xmlns="http://www.mozilla.org/2006/browser/search/">
  <ShortName>Twitter Realtime</ShortName>
  <Description>Realtime Twitter Search</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <UpdateInterval>7</UpdateInterval>
  <IconUpdateUrl>https://twitter.com/favicon.ico</IconUpdateUrl>
  <Image height="16" type="image/x-icon" width="16">https://twitter.com/favicon.ico</Image>
  <Url method="GET" rel="searchform" template="https://twitter.com/search" type="text/html">
    <Param name="q" value="{searchTerms}"/>
    <Param name="partner" value="Firefox"/>
    <Param name="source" value="desktop-search"/>
  </Url>
  <SearchForm>https://twitter.com/search</SearchForm>
</SearchPlugin>
