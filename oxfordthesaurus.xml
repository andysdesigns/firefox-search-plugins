<SearchPlugin xmlns="http://www.mozilla.org/2006/browser/search/">
  <ShortName>Oxford Thesaurus</ShortName>
  <Description>Oxford Thesaurus (US) English Search</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <UpdateInterval>7</UpdateInterval>
  <IconUpdateUrl>https://www.oxforddictionaries.com/us/external/images/favicon.ico</IconUpdateUrl>
  <Image height="16" type="image/x-icon" width="16">https://www.oxforddictionaries.com/us/external/images/favicon.ico</Image>
  <Url method="GET" template="https://encrypted.google.com/complete/search" type="application/x-suggestions+json">
    <Param name="q" value="{searchTerms}"/>
    <Param name="client" value="firefox"/>
  </Url>
  <Url method="GET" template="https://www.oxforddictionaries.com/us/definition/american_english-thesaurus/{searchTerms}" type="text/html"/>
  <SearchForm>https://www.oxforddictionaries.com/us</SearchForm>
</SearchPlugin>
